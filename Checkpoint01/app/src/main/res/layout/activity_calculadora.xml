<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CalculadoraActivity">

    <ScrollView
        android:layout_width="354dp"
        android:layout_height="456dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_valor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:hint="Valor 1"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/et_valor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:hint="Valor 2"
                android:imeOptions="actionGo"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_op"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Operação"
                android:textSize="15dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_soma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Soma"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rb_subtrai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Subtração"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rb_multiplica"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Multiplicação"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/rb_divide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Divisao"
                    android:textSize="15dp" />

            </RadioGroup>

            <Button
                android:id="@+id/bt_calcular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:padding="16dp"
                android:text="calcular" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>