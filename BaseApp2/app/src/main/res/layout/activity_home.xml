<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/bg_fiap"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que deseja fazer, "
            android:textSize="22dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/txv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="user"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_estados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTAR ESTADOS"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        />
    <Button
        android:id="@+id/btn_contatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTAR CONTATOS"
        android:padding="16dp"
        android:inputType="text"
        />
    <Button
        android:id="@+id/btn_sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAIR"
        android:padding="16dp"
        android:inputType="text"
        />

</LinearLayout>