<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_fiap"
    android:gravity="start">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_fiap"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/et_cad_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#30ffffff"
            android:hint="Username"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:imeOptions="actionNext"
            />

        <EditText
            android:id="@+id/et_cad_nome_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#30ffffff"
            android:hint="Nome Completo"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:imeOptions="actionNext"
            />

        <EditText
            android:id="@+id/et_cad_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#30ffffff"
            android:hint="Senha"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:imeOptions="actionNext"
            />

        <EditText
            android:id="@+id/et_conf_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="#30ffffff"
            android:hint="Confirmar Senha"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:imeOptions="actionNext"
            />
        <TextView
            android:id="@+id/tv_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sexo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"

            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_m"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Masculino"
                android:textColor="@color/white"
                />
            <RadioButton
                android:id="@+id/rb_f"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Feminino"
                android:textColor="@color/white"
                />
        </RadioGroup>

        <CheckBox
            android:id="@+id/cb_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"
            android:text="Li e concordo com os termos de uso"
            android:textColor="@color/white" />
        <CheckBox
            android:id="@+id/cb_receber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceito receber emails"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/bt_cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Cadastrar"
            android:layout_marginTop="16dp"
            android:background="@color/fiap_rosa"
            />

        <Button
            android:id="@+id/bt_voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Voltar"
            android:layout_marginTop="16dp"
            android:background="@color/fiap_rosa"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>