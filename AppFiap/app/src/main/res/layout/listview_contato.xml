<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_contato"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
    />

    <TextView
        android:id="@+id/tv_nome_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_contato"
        android:layout_alignTop="@id/iv_contato"
        android:textColor="@color/black"
        android:text="Nome Contato"
        />

    <TextView
        android:id="@+id/tv_telefone_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_contato"
        android:layout_alignBottom="@id/iv_contato"
        android:textColor="@color/black"
        android:text="Telefone"
        />
</RelativeLayout>